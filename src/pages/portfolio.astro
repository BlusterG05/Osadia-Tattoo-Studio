---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

const works = [
  { id: 1, style: "span-2" },
  { id: 2, style: "" },
  { id: 3, style: "" },
  { id: 4, style: "span-2" },
  { id: 5, style: "" },
  { id: 6, style: "" },
  { id: 7, style: "" },
  { id: 8, style: "span-2" },
  { id: 9, style: "" },
];
---

<Layout
  title="Galería de Tatuajes | Osadia Tattoo Studio"
  description="Explora nuestra galería de tatuajes. Realismo, Blackwork, Tradicional y más. Inspírate con el arte de nuestros tatuadores en Ecuador."
>
  <Navigation />

  <main class="portfolio-page">
    <header class="portfolio-header">
      <h1>PORTAFOLIO</h1>
      <p>EXPLORA NUESTRO ARTE</p>
    </header>

    <div class="gallery-grid">
      {
        works.map((work) => (
          <div class={`gallery-item ${work.style}`}>
            <div class="placeholder-img" />
          </div>
        ))
      }
    </div>

    <div class="back-home">
      <a href="/" class="back-btn">VOLVER AL INICIO</a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .portfolio-page {
    padding-top: 100px;
    background-color: var(--color-black);
    min-height: 100vh;
    color: var(--color-white);
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 0 2rem;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  p {
    font-family: var(--font-body);
    letter-spacing: 0.2em;
    color: #888;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .gallery-item {
    aspect-ratio: 1;
    background-color: #111;
    overflow: hidden;
    position: relative;
  }

  .gallery-item.span-2 {
    grid-column: span 2;
    grid-row: span 2;
  }

  .placeholder-img {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #1a1a1a, #2a2a2a);
    transition: transform 0.5s ease;
  }

  .gallery-item:hover .placeholder-img {
    transform: scale(1.05);
  }

  .back-home {
    text-align: center;
    padding: 4rem 0;
  }

  .back-btn {
    display: inline-block;
    padding: 1rem 2rem;
    border: 1px solid var(--color-white);
    color: var(--color-white);
    text-decoration: none;
    font-family: var(--font-display);
    transition: all 0.3s ease;
  }

  .back-btn:hover {
    background-color: var(--color-white);
    color: var(--color-black);
  }

  @media (max-width: 768px) {
    .gallery-item.span-2 {
      grid-column: span 1;
      grid-row: span 1;
    }

    h1 {
      font-size: 3rem;
    }
  }
</style>
