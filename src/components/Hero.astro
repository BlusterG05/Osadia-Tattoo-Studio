<section class="hero">
  <div class="noise"></div>
  <div class="hero-content">
    <h1 class="glitch-wrapper">
      <span class="glitch" data-text="OSADIA">OSADIA</span>
    </h1>
    <p class="subtitle">TATTOO STUDIO</p>
    <p class="location">SANTO DOMINGO, ECUADOR</p>
  </div>

  <div class="marquee-container" aria-hidden="true">
    <div class="marquee">
      <span
        >TINTA &bull; DOLOR &bull; ARTE &bull; OSADIA &bull; TINTA &bull; DOLOR
        &bull; ARTE &bull; OSADIA &bull;</span
      >
      <span
        >TINTA &bull; DOLOR &bull; ARTE &bull; OSADIA &bull; TINTA &bull; DOLOR
        &bull; ARTE &bull; OSADIA &bull;</span
