---
import "@fontsource/syne";
import "@fontsource/inter";
import { siteConfig } from "../data/siteConfig";
import {
  seoMeta,
  seoKeywords,
  generateTattooShopSchema,
  generateWebSiteSchema,
  generateFAQSchema,
} from "../data/seoConfig";

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  page?: "home" | "portfolio";
}

const {
  title = seoMeta.home.title,
  description = seoMeta.home.description,
  keywords = seoMeta.home.keywords,
  image = siteConfig.images.ogImage,
  page = "home",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullImageUrl = new URL(image, siteConfig.url).toString();

// Generate JSON-LD schemas
const tattooShopSchema = generateTattooShopSchema();
const webSiteSchema = generateWebSiteSchema();
const faqSchema = generateFAQSchema();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={siteConfig.images.favicon} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Generator & Canonical -->
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={siteConfig.name} />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="googlebot" content="index, follow" />

    <!-- Language & Locale -->
    <meta name="language" content="Spanish" />
    <meta http-equiv="content-language" content="es-EC" />
    <link rel="alternate" hreflang="es-EC" href={canonicalURL} />
    <link rel="alternate" hreflang="es" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Geographic Meta Tags (Ecuador) -->
    <meta name="geo.region" content="EC-SD" />
    <meta name="geo.placename" content={siteConfig.location.city} />
    <meta
      name="geo.position"
      content={`${siteConfig.location.latitude};${siteConfig.location.longitude}`}
    />
    <meta
      name="ICBM"
      content={`${siteConfig.location.latitude}, ${siteConfig.location.longitude}`}
    />

    <!-- Mobile & Theme -->
    <meta name="theme-color" content="#050505" />
    <meta name="msapplication-TileColor" content="#050505" />
    <meta name="format-detection" content="telephone=yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content={`${siteConfig.name} - Estudio de Tatuajes`}
    />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:locale" content="es_EC" />

    <!-- Facebook Places -->
    <meta
      property="place:location:latitude"
      content={String(siteConfig.location.latitude)}
    />
    <meta
      property="place:location:longitude"
      content={String(siteConfig.location.longitude)}
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url.toString()} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta
      name="twitter:image:alt"
      content={`${siteConfig.name} - Estudio de Tatuajes`}
    />

    <!-- Business Info -->
    <meta name="contact" content={siteConfig.contact.email} />
    <meta name="reply-to" content={siteConfig.contact.email} />
    <meta name="owner" content={siteConfig.name} />
    <meta name="coverage" content="Ecuador" />
    <meta name="distribution" content="global" />

    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(tattooShopSchema)}
    />
    <script
      type="application/ld+json"
      set:html={JSON.stringify(webSiteSchema)}
    />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </head>
  <body>
    <slot />
    <script>
      import Lenis from "lenis";
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        orientation: "vertical",
        gestureOrientation: "vertical",
        smoothWheel: true,
      });

      function raf(time: number) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-black: #050505;
    --color-white: #f5f5f5;
    --color-accent: #333;
    --font-display: "Syne", sans-serif;
    --font-body: "Inter", sans-serif;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--font-body);
    background: var(--color-black);
    color: var(--color-white);
    overflow-x: hidden;
  }

  body {
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-display);
    font-weight: 700;
    text-transform: uppercase;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    display: block;
  }

  /* Selection Color */
  ::selection {
    background: var(--color-white);
    color: var(--color-black);
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: var(--color-black);
  }
  ::-webkit-scrollbar-thumb {
    background: var(--color-accent);
    border-radius: 4px;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
