---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import InteractiveGallery from "../components/InteractiveGallery.astro";
---

<Layout
  title="Galería de Tatuajes | Osadia Tattoo Studio"
  description="Explora nuestra galería de tatuajes. Realismo, Blackwork, Tradicional y más. Inspírate con el arte de nuestros tatuadores en Ecuador."
>
  <Navigation />

  <main class="portfolio-page">
    <header class="portfolio-header">
      <h1>PORTAFOLIO</h1>
      <p>EXPLORA NUESTRO ARTE</p>
    </header>

    <div class="portfolio-container">
      <!-- Galería interactiva completa sin límites -->
      <InteractiveGallery />
    </div>

    <div class="back-home">
      <a href="/" class="back-btn">VOLVER AL INICIO</a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .portfolio-page {
    padding-top: 120px;
    background-color: var(--color-black);
    min-height: 100vh;
    color: var(--color-white);
  }

  .portfolio-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 0 2rem;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  p {
    font-family: var(--font-body);
    letter-spacing: 0.2em;
    color: #888;
    font-size: 0.9rem;
  }

  .portfolio-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .back-home {
    text-align: center;
    padding: 6rem 0;
  }

  .back-btn {
    display: inline-block;
    padding: 1rem 2rem;
    border: 1px solid var(--color-white);
    color: var(--color-white);
    text-decoration: none;
    font-family: var(--font-display);
    transition: all 0.3s ease;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
  }

  .back-btn:hover {
    background-color: var(--color-white);
    color: var(--color-black);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3rem;
    }
    .portfolio-container {
        padding: 0 1rem;
    }
  }
</style>
