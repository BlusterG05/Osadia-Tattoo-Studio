---
import "@fontsource/syne";
import "@fontsource/inter";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Osadia Tattoo Studio - El mejor estudio de tatuajes en Santo Domingo, Ecuador. Especialistas en Realismo, Blackwork y diseños personalizados.",
  image = "/images/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteUrl = "https://osadia-studio.com";

const jsonLD = {
  "@context": "https://schema.org",
  "@type": "TattooShop",
  name: "Osadia Tattoo Studio",
  image: `${siteUrl}${image}`,
  url: siteUrl,
  telephone: "+593992351451",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Av. Quito y Rio Toachi",
    addressLocality: "Santo Domingo",
    addressRegion: "Santo Domingo de los Tsáchilas",
    postalCode: "230101",
    addressCountry: "EC",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: -0.253,
    longitude: -79.1754,
  },
  openingHoursSpecification: {
    "@type": "OpeningHoursSpecification",
    dayOfWeek: [
      "Monday",
      "Tuesday",
      "Wednesday",
      "Thursday",
      "Friday",
      "Saturday",
    ],
    opens: "10:00",
    closes: "20:00",
  },
  sameAs: [
    "https://www.instagram.com/osadia_tattoo",
    "https://www.facebook.com/osadia_tattoo",
  ],
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="tatuajes ecuador, tattoo studio santo domingo, tatuadores ecuador, realismo, blackwork, tatuajes personalizados, osadia tattoo"
    />
    <meta name="author" content="Osadia Tattoo Studio" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLD)} />
  </head>
  <body>
    <slot />
    <script>
      import Lenis from "lenis";
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        orientation: "vertical",
        gestureOrientation: "vertical",
        smoothWheel: true,
      });

      function raf(time: number) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-black: #050505;
    --color-white: #f5f5f5;
    --color-accent: #333;
    --font-display: "Syne", sans-serif;
    --font-body: "Inter", sans-serif;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--font-body);
    background: var(--color-black);
    color: var(--color-white);
    overflow-x: hidden;
  }

  body {
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-display);
    font-weight: 700;
    text-transform: uppercase;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    display: block;
  }

  /* Selection Color */
  ::selection {
    background: var(--color-white);
    color: var(--color-black);
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: var(--color-black);
  }
  ::-webkit-scrollbar-thumb {
    background: var(--color-accent);
    border-radius: 4px;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
