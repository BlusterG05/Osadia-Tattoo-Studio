---
import InteractiveGallery from "./InteractiveGallery.astro";
---

<section id="gallery" class="gallery" aria-label="GalerÃ­a de Trabajos">
  <h2 class="section-title">TRABAJOS SELECCIONADOS</h2>
  
  <div class="gallery-container">
    <InteractiveGallery limit={6} featured={true} />
  </div>

  <div class="view-more-container">
    <a href="/portfolio" class="view-more-btn">VER PORTAFOLIO COMPLETO</a>
  </div>
</section>

<style>
  .gallery {
    background-color: var(--color-black);
    color: var(--color-white);
    padding: 6rem 2rem;
  }

  .section-title {
    font-size: 4rem;
    margin-bottom: 4rem;
    text-align: center;
    letter-spacing: -0.02em;
  }

  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .view-more-container {
    display: flex;
    justify-content: center;
    margin-top: 4rem;
  }

  .view-more-btn {
    font-family: var(--font-display);
    font-size: 1rem;
    color: var(--color-white);
    border: 1px solid rgba(255,255,255,0.3);
    padding: 1rem 2rem;
    transition: all 0.3s ease;
    letter-spacing: 0.1em;
  }

  .view-more-btn:hover {
    background: var(--color-white);
    color: var(--color-black);
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }
</style>
