    </div>
  </div>

  <div class="scroll-indicator">
    <span>EXPLORA</span>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  const tl = gsap.timeline();

  tl.from(".glitch", {
    y: 100,
    opacity: 0,
    duration: 1.5,
    ease: "power4.out",
    delay: 0.5,
  })
    .from(
      ".subtitle",
      {
        y: 20,
        opacity: 0,
        duration: 1,
        ease: "power3.out",
      },
      "-=1"
    )
    .from(
      ".location",
      {
        y: 20,
        opacity: 0,
        duration: 1,
        ease: "power3.out",
      },
      "-=0.8"
    )
    .from(
      ".marquee-container",
      {
        opacity: 0,
        duration: 2,
        ease: "power2.out",
      },
      "-=1"
    );

  // Mouse follow effect for noise or subtle parallax could go here
  document.addEventListener("mousemove", (e) => {
    const { clientX, clientY } = e;
    const xPos = (clientX / window.innerWidth - 0.5) * 20;
    const yPos = (clientY / window.innerHeight - 0.5) * 20;

    gsap.to(".hero-content", {
      x: xPos,
      y: yPos,
      duration: 1,
      ease: "power2.out",
    });
  });
</script>

