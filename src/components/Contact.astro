    text-align: center;
    padding: 2rem;
    position: relative;
  }

  .cta-text {
    font-size: 5vw;
    margin-bottom: 3rem;
    line-height: 1;
  }

  .highlight {
    font-style: italic;
    position: relative;
    display: inline-block;
  }

  .highlight::after {
    content: "";
    position: absolute;
    bottom: 10px;
    left: 0;
    width: 100%;
    height: 10px;
    background: var(--color-black);
    z-index: -1;
    opacity: 0.2;
  }

  .book-btn {
