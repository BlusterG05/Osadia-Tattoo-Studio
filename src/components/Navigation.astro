<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 2rem;
    z-index: 100;
    mix-blend-mode: difference;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.05em;
    text-transform: uppercase;
    color: var(--color-white);
  }

  .menu {
    display: flex;
    gap: 2rem;
  }

  .menu-item {
    font-family: var(--font-body);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    position: relative;
    overflow: hidden;
    color: var(--color-white);
  }

  .menu-item::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .menu-item:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  @media (max-width: 768px) {
    .nav {
      padding: 1.5rem;
    }
    .menu {
      display: none; /* Mobile menu to be added if needed, or keep simple */
    }
  }
</style>
